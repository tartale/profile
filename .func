#!/bin/bash

function ags() {
  secretID="${1}"
  aws secretsmanager get-secret-value --secret-id "${secretID}" --output json | jq -r '.SecretString' | jq
}

function myIP()(
  curl http://api.ipify.org 2> /dev/null
  echo
)

function cdp() {
  cd "${PROJECTS}/$1"
}

function _complete_cdp {
  _complete_dir_helper "${PROJECTS}"
}
complete -F _complete_cdp cdp

function interface()(
  netstat -rn | grep default | head -1 | awk '{print $6}'
)

function mvlink(){
  if [ -z $1 ] || [ -z $2 ]; then
    echo "usage: $0 sourceLink target"
    return 1
  fi

  if [ ! -L $1 ]; then
    echo "$1: not a symbolic link"
    return 1
  fi

  rm -f $1 && ln -s $2 $1
}

function dockerclean() {
  docker images -f "dangling=true" -q | xargs docker rmi -f
  docker rm -v $(docker ps -a -q -f status=exited)
  docker volume ls -f 'dangling=true' -q | xargs docker volume rm
  docker ps -a | egrep 'Exited.*(days|weeks|months)' | awk '{print $1}' | xargs docker rm -v
}

function kdap() {
  if [ $# -ne 1 ]; then
    echo "usage: $0 namespace" >&2
    return 1
  fi
  kubectl delete --all pods --namespace=$1
}

function kdaa() {
  if [ $# -ne 1 ]; then
    echo "usage: $0 namespace" >&2
    return 1
  fi
  kubectl delete --all deployments,jobs,services,pods --namespace=$1
}

function hx() {
  cmd="history"
  for g in $*; do
    cmd="$cmd | grep ${g}"
  done
  eval "${cmd}"
}

function ff() {
  find . -type f -exec grep -l "${1}" {} \;
}


thisOS=$(uname)
source "${PROJECTS}/profile/.func-${thisOS}"

if [ -e "${PROJECTS}/profile/.func-aspenmesh" ]
then
    source "${PROJECTS}/profile/.func-aspenmesh"
fi
