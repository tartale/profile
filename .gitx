
git config --global user.email "tartale.work@gmail.com"
git config --global user.name "Tom"
git config --global credentials.username "tartale"
git config --global core.excludesfile "~/.gitignore"
git config --global pull.ff "only"
git config --global url.ssh://git@github.com/.insteadof "https://github.com/"

export GIT_ORIGIN="git@github.com:tartale"
export GIT_UPSTREAM="git@github.com:tartale"

function gdefault() (
  defaultBranch="${GIT_DEFAULT_BRANCH:-main}"
  echo "${defaultBranch}"
)

function gremote() (
  defaultRemote="upstream"
  git remote | grep upstream > /dev/null 2>&1
  exists="$?"
  if [[ ${exists} == 1 ]]; then
    defaultRemote="origin"
  fi

  echo "${defaultRemote}"
)

function gsquash() (
  if [[ "${1}" == "" ]] || [[ "${2}" == "" ]]
  then
    echo "usage: gsquash <numCommits> <message>"
    return 1
  fi
  git reset --soft "HEAD~${1}" && git commit -vm "${2}"
)

function gclone {
  if [ -z $1 ]
  then
    echo "usage:  gclone <repository>"
    exit
  fi

  (cd ${WORKSPACE}
    git clone "${GIT_ORIGIN}/$1.git"
    (
      cd $1
      git remote add upstream "${GIT_UPSTREAM}/$1.git"
      git fetch upstream
    )
  )
}

function gfinish {
  if [ -z $1 ]
  then
    echo "usage:  gfinish <branch>"
    return
  fi
  branch="${1}"

  git checkout $(gdefault)
  git pull $(gremote) $(gdefault)
  git branch -D ${branch}
}

function gcurse() {
  gitDirs=$(find . -type d -maxdepth 1 -exec test -e {}/.git \; -print)
  for dir in ${gitDirs[@]}; do
    (
      echo "${dir}"
      cd "${dir}"
      /bin/bash -c "${@}"
    )
  done
}

source "${WORKSPACE}/profile/.git-completion.${SHELLNAME}"
__git_complete gfinish _git_checkout
__git_complete gck _git_checkout
__git_complete gb _git_branch

if [ -e "${WORKSPACE}/profile/.gitx-${PROJECT}" ]
then
    source "${WORKSPACE}/profile/.gitx-${PROJECT}"
fi
