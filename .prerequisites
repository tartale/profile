#!/usr/bin/env bash
# shellcheck disable=SC1090

function includeCustoms() {
  prefix="${1}"
  suffix="${2}"
  if [ -e "${PROFILE}/.${prefix}.${SHELLNAME}" ]; then
    source "${PROFILE}/.${prefix}.${SHELLNAME}"
  fi
  if [ -e "${PROFILE}/.${prefix}-${PROJECT}" ]
  then
    source "${PROFILE}/.${prefix}-${PROJECT}"
  fi  
  if [ -e "${PROFILE}/.${prefix}-${PROJECT}.${SHELLNAME}" ]
  then
    source "${PROFILE}/.${prefix}-${PROJECT}.${SHELLNAME}"
  fi
  if [ -e "${PROFILE}/.${prefix}-${suffix}" ]
  then
    source "${PROFILE}/.${prefix}-${suffix}"
  fi
  if [ -e "${PROFILE}/.${prefix}-${suffix}.${SHELLNAME}" ]
  then
    source "${PROFILE}/.${prefix}-${suffix}.${SHELLNAME}"
  fi
}
